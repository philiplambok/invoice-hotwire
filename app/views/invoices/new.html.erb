<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h5>Create a new invoice</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with(model: @invoice) do |form| %>
        <div class="form-group">
          <%= form.label :number %>
          <%= form.text_field :number, placeholder: 'Invoice Number', class: 'form-control' %>
        </div>
        <div class="form-group mt-2 row">
          <div class="col-md-6">
            <%= form.label :customer %>
            <%= form.select :customer, Customer.all.pluck(:name, :id), { prompt: 'Select Customer' }, { required: true, class: 'form-control' } %>
          </div>
          <div class="col-md-6">
            <%= form.label :email %>
            <%= form.text_field :email, class: 'form-control', disabled: true, class: 'form-control'  %>
          </div>
        </div>
        <br>
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>